@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hello, @User.Identity.Name<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><a href="@Url.Action("Index", "Profile")">My profile</a></li>
                <li><a href="@Url.Action("Create", "Lot")">Add lot</a></li>
                <li><a href="@Url.Action("Lots", "Profile")">My lots</a></li>
                @if (User.IsInRole("Administrator"))
                {
                    <li><a href="#">Users edit</a></li>
                }
                @if (User.IsInRole("Moderator"))
                {
                    <li><a href="#">Lots edit</a></li>
                }
                <li role="separator" class="divider"></li>
                <li>@Html.ActionLink("Log out", "LogOut", "Account")</li>
            </ul>
        </li>
    </ul>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li>@Html.ActionLink("Register", "Register", "Account")</li>
    <li>@Html.ActionLink("Log in", "LogIn", "Account")</li>
</ul>
}
