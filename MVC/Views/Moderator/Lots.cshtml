@model IEnumerable<MVC.Models.Lot.LotModeratorViewModel>

@{
    ViewBag.Title = "Lots";
}

<h2>Lots</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OwnerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OwnerEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDatetime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RateCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastRateDateTime)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("LotDetails", "Moderator", new{id = item.Id})">@Html.DisplayFor(modelItem => item.Name)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDatetime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RateCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastRateDateTime)
        </td>
    </tr>
}

</table>
